// T1547.001 - Registry Run Key Persistence
// Detects new or modified run keys for persistence
DeviceRegistryEvents
| where RegistryKey has_any ("Run", "RunOnce")
| where RegistryValueName !in ("SecurityHealth", "OneDrive", "Antimalware")
| where RegistryData !contains "Windows\\System32"
| project Timestamp, DeviceName, RegistryKey, RegistryValueName, RegistryData, InitiatingProcessAccountName
| order by Timestamp desc
