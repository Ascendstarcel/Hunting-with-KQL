// T1070.004 - File Deletion
// Detect bulk deletion of forensic/logging files within short timeframes
DeviceFileEvents
| where ActionType == "FileDeleted"
| summarize Deletes=count() by InitiatingProcessAccountName, bin(Timestamp, 5m)
| where Deletes > 10
| project InitiatingProcessAccountName, Timestamp, Deletes
| order by Deletes desc
